@page
@model SupermarketAPI.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h2 class="text-center">Register</h2>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="RegisterData.UserName"></label>
                        <input asp-for="RegisterData.UserName" class="form-control" />
                        <span asp-validation-for="RegisterData.UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="RegisterData.Email"></label>
                        <input asp-for="RegisterData.Email" class="form-control" />
                        <span asp-validation-for="RegisterData.Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="RegisterData.Password"></label>
                        <input asp-for="RegisterData.Password" class="form-control" type="password" />
                        <span asp-validation-for="RegisterData.Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="RegisterData.ConfirmPassword"></label>
                        <input asp-for="RegisterData.ConfirmPassword" class="form-control" type="password" />
                        <span asp-validation-for="RegisterData.ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <p>Already have an account? <a asp-page="./Login">Login here</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}