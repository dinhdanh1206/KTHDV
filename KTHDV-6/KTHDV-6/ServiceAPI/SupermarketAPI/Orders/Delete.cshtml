@page "{id:int}"
@model SupermarketAPI.Pages.Orders.DeleteModel
@{
    ViewData["Title"] = "Delete Order";
}

<h2>Delete Order</h2>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this order?</h3>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-3">Customer Name</dt>
        <dd class="col-sm-9">@Model.Order.CustomerName</dd>

        <dt class="col-sm-3">Customer Email</dt>
        <dd class="col-sm-9">@Model.Order.CustomerEmail</dd>

        <dt class="col-sm-3">Total Amount</dt>
        <dd class="col-sm-9">@Model.Order.TotalAmount.ToString("C")</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Order.Status</dd>

        <dt class="col-sm-3">Created At</dt>
        <dd class="col-sm-9">@Model.Order.CreatedAt.ToLocalTime()</dd>
    </dl>

    <h4 class="mt-4">Order Items</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Order.OrderItems)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice.ToString("C")</td>
                    <td>@item.TotalPrice.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>

    <form method="post">
        <input type="hidden" asp-for="Order.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>